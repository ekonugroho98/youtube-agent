# Controller Configuration
STREAM_CONTROLLER_PORT=8000
STREAM_CONFIG_DIR=/var/lib/stream-controller
LOG_LEVEL=info

# Storage Configuration
# Provider: "cloudflare" for R2, "aws" for S3, "gcs" for Google Cloud Storage
STORAGE_PROVIDER=cloudflare
STORAGE_BUCKET=my-stream-media
STORAGE_ACCESS_KEY_ID=your_access_key_here
STORAGE_SECRET_ACCESS_KEY=your_secret_key_here
STORAGE_REGION=auto

# YouTube Configuration (WARNING: Keep secret, never commit to git)
YOUTUBE_RTMP_URL=rtmp://a.rtmp.youtube.com/live2
YOUTUBE_STREAM_KEY=xxxx-xxxx-xxxx-xxxx

# Worker Configuration
FFMPEG_PATH=/usr/bin/ffmpeg
WORKER_RETRY_DELAY=30
WORKER_MAX_RETRIES=3
